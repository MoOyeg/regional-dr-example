---
# Example: Cluster with auto-detected base domain from Route53
# The base domain will be automatically fetched from your first Route53 hosted zone

# Cluster identification
cluster_name: "cluster-auto-detect"
# cluster_base_domain: not provided - will auto-detect from Route53!

# Cluster role for DR operators (hub or spoke)
# Set to 'hub' for the ACM management cluster
# Defaults to 'spoke' from group_vars
# cluster_role: hub

# AWS Credential Set to use (1, 2, or 3)
aws_credential_set: 1

# AWS Configuration
aws_region: "us-east-1"
aws_availability_zone: "us-east-1a"
aws_instance_type: "m5.2xlarge"
aws_root_volume_size: 120

# RHCOS AMI for OpenShift 4.17 in us-east-1
aws_ami_id: "ami-0abcdef1234567890"

# Network Configuration - Update with your values
aws_vpc_id: "vpc-xxxxxxxxxxxxxxxxx"
aws_subnet_id: "subnet-xxxxxxxxxxxxxxxxx"
aws_security_group_id: "sg-xxxxxxxxxxxxxxxxx"

# SSH Key (choose one):
# Option 1: Place ssh-key.pub in project root (auto-imported to EC2)
# Option 2: Use existing AWS EC2 key pair:
# aws_key_name: "my-keypair"

# Elastic IP
aws_create_eip: true

# Route53 DNS - will use auto-detected domain
# aws_route53_zone: will be set automatically

# OpenShift version
openshift_version: "4.17"
